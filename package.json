{
    "scripts": {
        "clean": "rm -rf target && rm -rf dist",
        "start": "cross-env NODE_ENV=development nollup -c",
        "build": "npm run clean && cross-env NODE_ENV=production rollup -c",
        "build:test": "cross-env NODE_ENV=test MAIN=test/main.js nollup -c",
        "test:ui": "concurrently --success first -k \"wait-on http://localhost:9001/main.[hash].js && mocha-istanbul-ui --manual --bootstrap test/bootstrap.js\" \"npm run build:test\"",
        "test": "concurrently --success first -k \"wait-on http://localhost:9001/main.[hash].js && mocha-istanbul-ui --console --once --manual --bootstrap test/bootstrap.js\" \"npm run build:test\""
    },
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/plugin-transform-react-jsx": "^7.3.0",
        "acorn-jsx": "^5.0.1",
        "babel-plugin-istanbul": "^5.1.1",
        "chai": "^4.2.0",
        "concurrently": "^4.1.0",
        "cross-env": "^5.2.0",
        "mocha-istanbul-ui": "^0.2.0",
        "node-sass": "^4.11.0",
        "nollup": "^0.6.0",
        "preact-render-spy": "^1.3.0",
        "rollup": "^1.1.0",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-glob-import": "^0.3.1",
        "rollup-plugin-hot-css": "0.0.5",
        "rollup-plugin-node-license": "0.0.4",
        "rollup-plugin-node-resolve": "^4.0.0",
        "rollup-plugin-static-files": "0.0.1",
        "rollup-plugin-terser": "^4.0.4",
        "wait-on": "^3.2.0"
    },
    "dependencies": {
        "preact": "^8.4.2"
    }
}
